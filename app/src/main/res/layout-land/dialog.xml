<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="3dp">


        <TextView
            android:id="@+id/margin_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/you_won_textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginRight="-1dp"
            android:layout_weight="8"
            android:fontFamily="@font/ar_carter_font"
            android:gravity="center_horizontal|center_vertical"
            android:text="YOU WON!"
            android:elegantTextHeight="true"
            android:textColor="#DD1515"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="80sp"
            app:autoSizeMinTextSize="30sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/margin_youwin_steps"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />


        <LinearLayout
            android:id="@+id/you_did_it_steps_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/you_did_it_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:fontFamily="@font/ar_carter_font"
                android:gravity="right|center_vertical"
                android:maxLines="1"
                android:text="You did it in "
                app:autoSizeMaxTextSize="48sp"
                app:autoSizeMinTextSize="18sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:id="@+id/number_of_moves_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/ar_carter_font"
                android:gravity="center_horizontal|center_vertical"
                android:maxLines="1"
                android:text="20"
                android:textColor="#29732C"
                app:autoSizeMaxTextSize="48sp"
                app:autoSizeMinTextSize="20sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform" />


            <TextView
                android:id="@+id/moves_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:fontFamily="@font/ar_carter_font"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="moves"
                app:autoSizeMaxTextSize="48sp"
                app:autoSizeMinTextSize="18sp"
                app:autoSizeStepGranularity="2sp"
                app:autoSizeTextType="uniform" />

        </LinearLayout>

        <TextView
            android:id="@+id/margin_youdidit_best"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/best_result_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:fontFamily="@font/ar_carter_font"
            android:gravity="center_horizontal"
            android:text="best result 15 steps"
            android:textColor="#306D18"
            app:autoSizeMaxTextSize="28sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/margin_best_buttons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <!-- buttons linear layout -->
        <LinearLayout
            android:id="@+id/buttons_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:gravity="end|center_vertical"
            android:orientation="horizontal"
            android:padding="2dp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp">


            <TextView
                android:id="@+id/home_button_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/victory_home_button"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center_horizontal|center_vertical"
                android:paddingHorizontal="5dp"
                android:text="Home"
                android:textColor="#393939"
                app:autoSizeMaxTextSize="18sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeTextType="uniform" />


            <LinearLayout
                android:id="@+id/play_again_button_linearlayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="9dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/victory_play_again_button"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_replay_white_24dp" />

                <TextView
                    android:id="@+id/play_agian_button_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial"
                    android:maxLines="1"
                    android:text="Play again"
                    android:textColor="#ffffff"
                    app:autoSizeMaxTextSize="18sp"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeTextType="uniform" />

            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/margin_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <ImageView
        android:id="@+id/left_cat_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/victory_cat1" />

    <ImageView
        android:id="@+id/right_cat_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        android:foregroundGravity="center_vertical"
        app:srcCompat="@drawable/victory_cat2" />

</RelativeLayout>