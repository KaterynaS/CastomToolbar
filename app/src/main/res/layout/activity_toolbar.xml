<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ToolbarActivity">

    <include
        android:id="@+id/tool_of_bars"
        layout="@layout/tools"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#402C1C"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_widget"
        app:layout_constraintEnd_toEndOf="@+id/toolbar_widget"
        app:layout_constraintStart_toStartOf="@+id/toolbar_widget"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>